---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="m-28 flex flex-col items-center justify-center">
    <h1>로그인페이지</h1>
    <form class="flex w-52 flex-col" action="POST">
      <label for="email">EMAIL</label>
      <input
        class="mb-1 border border-black bg-red-300 caret-violet-700"
        type="text"
        id="email"
        name="email"
      />
      <label for="password">PASSWORD</label>
      <input
        class="border border-black bg-red-300 caret-violet-700"
        type="password"
        id="password"
        name="pass"
      />
      <button class="mt-2 rounded-3xl bg-black py-2 text-white">Sign In</button>
      <a href="/account/resister"><p class="mt-4">Create Account</p></a>
    </form>
  </div>
</Layout>
